{
  "name": "stargazer",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build:ssg",
    "build:ssg": "vite-ssg build",
    "build:spa": "npm run type-check && vite build",
    "preview": "vite preview",
    "type-check": "vue-tsc --build",
    "format": "prettier --write --list-different src/ docs/ tests/",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:it": "vitest run tests/integration",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@unhead/vue": "^2.0.19",
    "html-to-image": "^1.11.13",
    "pinia": "^3.0.3",
    "vue": "^3.5.17"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.6.2",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^25.0.10",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitest/eslint-plugin": "^1.3.25",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.38.0",
    "eslint-plugin-vue": "^10.5.1",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-imagetools": "^9.0.0",
    "vite-plugin-vue-devtools": "^8.0.3",
    "vite-ssg": "^28.2.2",
    "vite-ssg-sitemap": "^0.10.0",
    "vitest": "^4.0.3",
    "vue-router": "^4.6.3",
    "vue-tsc": "^3.1.2"
  }
}
